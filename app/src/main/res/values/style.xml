<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@color/white</item> <!-- Nền màu trắng -->
        <item name="colorPrimary">@color/orange</item> <!-- Màu cam -->
        <item name="android:textColorPrimary">@color/orange</item>
    </style>


    <style name="AppToolbar" parent="Widget.AppCompat.Toolbar">
        <!-- Title Text Color -->
        <item name="android:titleTextColor">@color/orange</item>

        <!-- Subtitle Text Color -->
        <item name="android:subtitleTextColor">@color/orange</item>

        <!-- Navigation Icon Color -->
        <item name="android:navigationIcon">@drawable/drawable_back</item>
        <item name="navigationIconTint">@color/orange</item>

    </style>
</resources>