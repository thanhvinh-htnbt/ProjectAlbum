<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="400dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="     Nhập số giây mỗi slide"/>
    <EditText android:id="@+id/et_numbersecond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioGroup android:id="@+id/rg_effect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton android:id="@+id/rb_effect1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fade"/>
            <RadioButton android:id="@+id/rb_effect2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rotate"/>
            <RadioButton android:id="@+id/rb_effect3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RightSlider"/>
        </RadioGroup>
    </LinearLayout>

</LinearLayout>